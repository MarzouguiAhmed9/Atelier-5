<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Books</th>
        </tr>
    </thead>
    <tbody>
        {% for author in authers %}
            <tr>
                <td>
                    {% for book in author.getBooks() %}
                        {{ book.getTitle() }}<br>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

